<%= form_for @player do |f| %>
  <div class="form-group">
    <%= f.label "Nome" %>
    <%= f.text_field :name, class: "form-control", required: "true" %>
  </div>
  <div class="form-group">
    <%= f.label "Número" %>
    <%= f.text_field :number, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Posição" %>
    <%= f.text_field :position, class: "form-control" %>
  </div>  
  <%= f.submit class: "btn btn-primary", value: "Salvar", "data-disable-with" => 'Salvando'  %>&nbsp;
  <%= link_to 'Voltar', players_path, :class => 'btn btn-link'%>
<% end %>